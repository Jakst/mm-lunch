{
  "package": {
    "productName": "MM Lunch",
    "version": "0.1.0"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:1543",
    "beforeDevCommand": "yarn dev:fe",
    "beforeBuildCommand": "yarn build:fe"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": ["icons/stew.png"],
      "resources": [],
      "externalBin": [],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": "",
      "deb": {
        "depends": [],
        "useBootstrapper": false
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "",
        "useBootstrapper": false,
        "exceptionDomain": "",
        "signingIdentity": null,
        "entitlements": null
      },
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://mm-lunch.vercel.app/api/releases/{{target}}/{{current_version}}"
      ]
    },
    "allowlist": {
      "all": false
    },
    "windows": [
      {
        "title": "MM Lunch",
        "width": 360,
        "height": 340,
        "fullscreen": false,
        "resizable": false,
        "focus": false,
        "visible": false,
        "decorations": false,
        "alwaysOnTop": false,
        "skipTaskbar": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: wss: http: https: tauri: 'unsafe-eval' 'unsafe-inline' 'self' img-src: 'self'"
    },
    "systemTray": {
      "iconPath": "icons/stew.png",
      "iconAsTemplate": true
    }
  }
}
